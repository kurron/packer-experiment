{
    "description": "Builds a bare bones Ubuntu 14.04 Desktop x64 box",
    "min_packer_version": "0.6.1",

    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "hostname": "trusty-desktop"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "iso_checksum": "01545fa976c8367b4f0d59169ac4866c",
        "iso_checksum_type": "md5",
        "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04-server-amd64.iso",
        "ssh_username": "{{user `ssh_name`}}",

        "boot_command" : [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-vanilla.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{user `hostname`}} ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "initrd=/install/initrd.gz -- <enter>"
        ],

        "boot_wait": "10s",
        "disk_size" : 40000,
        "floppy_files": [],
        "format": "ovf",
        "guest_additions_mode": "upload",	
        "guest_os_type": "Ubuntu_64",
        "hard_drive_interface": "sata",
        "headless": false,
        "http_directory" : "web-server",
        "http_port_min" : 8000,
        "http_port_max" : 9000,
        "output_directory": "output-virtualbox-iso",
        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_port": 22,
        "ssh_wait_timeout": "20m",
	    "vboxmanage": [ 
		    ["modifyvm", "{{.Name}}", "--vram", "16"],
		    ["modifyvm", "{{.Name}}", "--memory", "512"],
		    ["modifyvm", "{{.Name}}", "--cpus", "1"],
		    ["modifyvm", "{{.Name}}", "--audio", "none"],
		    ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"]
	],
	"vboxmanage_post": [],
	"vm_name": "trusty-x64-desktop"
    }],	
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
            "scripts": ["ansible/scripts/passwordless-sudo.sh", "ansible/scripts/install-ansible.sh"]
        },
        {
            "type"          : "ansible-local",
            "playbook_file" : "ansible/ansible-desktop.yml",
            "playbook_dir"  : "ansible"
        }
    ],
    "post-processors": [
        {
             "type": "vagrant",
             "output": "vagrant/trusty-x64-desktop.box"
        }
    ]
}
