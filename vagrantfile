# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.provider "virtualbox" do |v|
      v.customize ["modifyvm", :id, "--groups", "/Packer"]
  end

  config.vm.define "server" do |server|
      server.vm.box = "packer/utopic-x64-server"
      server.vm.hostname = "server"
      server.vm.provider "virtualbox" do |v|
          v.name = "packer.server"
      end
  end

  config.vm.define "desktop" do |desktop|
      desktop.vm.box = "packer/utopic-x64-desktop"
      desktop.vm.hostname = "desktop"
      desktop.vm.provider "virtualbox" do |v|
          v.gui = true
          v.name = "packer.desktop"
      end
  end
end
