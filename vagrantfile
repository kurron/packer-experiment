  config.vm.define "ubuntu" do |ubuntu|
      ubuntu.vm.provider "virtualbox" do |v|
          config.vm.box = "xenial-x64-ubuntu/5.1.6"
          v.gui = true
          v.name = "packer.ubuntu"
